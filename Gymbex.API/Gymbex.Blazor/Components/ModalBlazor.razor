@using Microsoft.AspNetCore.Components.Forms
@inject IJSRuntime JSRuntime

<div class="@ModalClass" id="@ModalId" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="@ModalClass" @onclick="OnCancel" aria-label="Zamknij"></button>
            </div>
            @if (!AlertMode)
            {
                <div class="modal-body">
                    @BodyContent
                </div>
            }
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="@ModalClass" @onclick="OnCancel">Anuluj</button>
                <button type="submit" class="btn btn-primary" @onclick="OnSave">@OnSaveTitle</button>
            </div>
        </div>
    </div>
</div>