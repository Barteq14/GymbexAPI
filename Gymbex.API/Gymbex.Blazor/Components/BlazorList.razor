
@typeparam T

<div class="title">
    <h3>@Title</h3>
    <AuthorizeView>
        <Authorized>
            @if(IsAdmin)
            {
                <button type="button" class="btn btn-success btn-lg">Dodaj</button>
            }
        </Authorized>
    </AuthorizeView>
</div>
<table class="table admin-table-width">
    <thead>
        <tr>
            @foreach (var property in GetProperties().Skip(1))
            {
                <th>@property.Name</th>
            }
            @if (ShowActionHeader)
            {
                <th>Akcja</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                @foreach (var property in GetProperties().Skip(1))
                {
                    <td>@(property.GetValue(item) is null ? "Brak" : property.GetValue(item))</td>
                }
                <td>
                    @if (HaveChildContent)
                    {
                        <AuthorizeView>
                            <Authorized>
                                @ChildContent(item)
                            </Authorized>
                        </AuthorizeView>
                    }
                </td>
            </tr>
            
        }
    </tbody>
</table>