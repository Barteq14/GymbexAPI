@page "/instructorList"
@typeparam T

<div class="title">
    <h3>@Title</h3>
    <button type="button" class="btn btn-success btn-lg">Dodaj</button>
</div>
<table class="table admin-table-width">
    <thead>
        <tr>
            @foreach (var property in GetProperties().Skip(1))
            {
                <th>@property.Name</th>
            }
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                @foreach (var property in GetProperties().Skip(1))
                {
                    <td>@(property.GetValue(item) is null ? "Brak" : property.GetValue(item))</td>
                }
                <td>
                    <AuthorizeView>
                        <Authorized>
                            <button type="button" class="btn btn-warning">Edytuj</button>
                            <button type="button" class="btn btn-danger">Usuń</button>
                        </Authorized>
                    </AuthorizeView>
                    @if (ShowAdditionalButton)
                    {
                        <button type="button" class="btn btn-primary" style="margin-left:5px;">@AdditionalButtonTitle</button>
                    }
                </td>
            </tr>
            
        }
    </tbody>
</table>

