@page "/login"
@using Gymbex.Blazor.Services.Auth;
@using Microsoft.AspNetCore.Components.Forms
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

@if (ShowErrors)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}
<div class="login-card-container">
    <div class="login-card">
        <div class="login-card-logo">
            <img src="./Images/logo-gymbex.png" alt="logo"/>
        </div>
        <div class="login-card-header">
            <h1>Logowanie</h1>
            <div>Proszę podaj odpowiednie dane logowania</div>
        </div>
        <EditForm class="login-card-form" Model="loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-item">
                <span class="form-item-icon material-symbols-rounded">mail</span>
                <InputText type="text" placeholder="Wprowadź email" required autofocus @bind-Value="loginModel.Email" />
                <ValidationMessage For="@(() => loginModel.Email)" />
            </div>
            <div class="form-item">
                <span class="form-item-icon material-symbols-rounded">lock</span>
                <InputText type="password" placeholder="Wprowadź hasło" required @bind-Value="loginModel.Password" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>
            <div class="form-item-other">
                <div class="checkbox">
                    <input type="checkbox" id="rememberMeCheckbox" />
                    <label for="rememberMeCheckbox">Zapamiętaj mnie</label>
                </div>
                <a href="#">Zapomniałem hasła!</a>
            </div>
            <button type="submit">Zaloguj</button>
        </EditForm>
        <div class="login-card-footer">
            Nie posiadasz konta? <a href="/register">Stwórz konto</a>
        </div>
