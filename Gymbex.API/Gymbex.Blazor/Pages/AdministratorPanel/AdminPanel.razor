@page "/adminPanel"
@using Gymbex.Blazor.Components
@using Gymbex.Blazor.Pages.AdministratorPanel.Components.CustomerList
@using Gymbex.Blazor.Pages.AdministratorPanel.Components.EquipmentList

<h1 class="admin-title">Panel administracyjny</h1>

<div class="admin-box">
    <div class="sidebar admin-menu">
        <div class="image-text">
            <img src="./Images/logo-gymbex.png" />
        </div>
        <button type="button" class="btn btn-dark" @onclick="CustomerListView">Użytkownicy</button>
        <button type="button" class="btn btn-dark" @onclick="EquipmentListView">Sprzęt</button>
        <button type="button" class="btn btn-dark" @onclick="ActivityListView">Zajęcia</button>
        <button type="button" class="btn btn-dark" @onclick="TicketListView">Karnety</button>
        <button type="button" class="btn btn-dark" @onclick="ReservationListView">Rezerwacje</button>
    </div>
    <div class="admin-content">
        @if (ShowCustomers)
        {
            <CustomerList  Items="Customers"/>
        }
        @if (ShowTickets)
        {
            <div class="tab-pane" id="karnety">
                <BlazorList Items="Tickets" Title="Lista karnetów" IsAdmin=true>
                    <ChildContent>
                        <button type="button" class="btn btn-warning">Edytuj</button>
                        <button type="button" class="btn btn-danger">Usuń</button>
                        <button type="button" class="btn btn-primary">Rezerwacje</button>
                    </ChildContent>
                </BlazorList>
            </div>
        }
        @if (ShowActivities)
        {
            <div class="tab-pane" id="zajecia">
                <BlazorList Items="Activities" Title="Lista zajęć" ShowAdditionalButton=true AdditionalButtonTitle="Rezerwacje" IsAdmin=true>
                    <ChildContent>
                        <button type="button" class="btn btn-warning">Edytuj</button>
                        <button type="button" class="btn btn-danger">Usuń</button>
                    </ChildContent>
                </BlazorList>
            </div>
        }

        @if (ShowReservations)
        {
             <div class="tab-pane" id="rezerwacje">
                <BlazorList Items="Reservations" Title="Rezerwacje użytkowników" ShowAdditionalButton=true AdditionalButtonTitle="Rezerwacje">
                    <ChildContent>
                        <button type="button" class="btn btn-danger">Usuń</button>
                    </ChildContent>
                </BlazorList>
            </div>
        }

        @if (ShowEquipments)
        {
            <EquipmentList Items="Equipments"/>
        }

    </div>
</div>